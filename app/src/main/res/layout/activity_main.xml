<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView"
            android:name="com.example.projekt3_wersja3.Fragment_logowanie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainerView3"
                android:name="com.example.projekt3_wersja3.Fragment_rejestracja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="zaloguj się lub zarejestruj aby wejść do aplikacji z listą zakupów"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:id="@+id/tytul"/>

        <Button
            android:id="@+id/colorBT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="zmień tło fragmentów na zielony"
            android:onClick="ustawcolor"/>

        <Button
            android:id="@+id/sizeBT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wróc do białego tła"
            android:onClick="ustawcolor2"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>